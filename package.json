{
    "name": "guilded.bio",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "generate": "prisma generate",
        "migrate:dev": "npx dotenv -e ./.env -- prisma migrate dev --name init",
        "seed": "npx dotenv -e ./.env -- npx ts-node prisma/seed.ts",
        "start": "next start",
        "lint": "next lint",
        "prepare": "npx husky install",
        "vercel-build": "prisma generate && prisma migrate deploy && next build",
        "prettier": "npx prettier --write **/*.{tsx,jsx,ts,js,json,yml,yaml,md}",
        "dev-env": "docker-compose down -v && docker-compose up -d --build && yarn migrate:dev && yarn seed && docker-compose logs -f site"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^3.14.0",
        "next": "12.1.6",
        "next-auth": "^4.3.4",
        "next-auth-guilded": "1.0.1",
        "node-fetch": "^3.2.4",
        "react": "18.1.0",
        "react-dom": "18.1.0",
        "react-toastify": "^9.0.2"
    },
    "devDependencies": {
        "@types/node": "17.0.31",
        "@types/node-fetch": "^2.6.1",
        "@types/react": "18.0.8",
        "@types/react-dom": "18.0.3",
        "autoprefixer": "^10.4.7",
        "dotenv": "^16.0.1",
        "dotenv-cli": "^5.1.0",
        "eslint": "8.14.0",
        "eslint-config-next": "12.1.6",
        "husky": "7.0.4",
        "postcss": "^8.4.13",
        "prettier": "2.6.0",
        "pretty-quick": "3.1.3",
        "prisma": "^3.14.0",
        "tailwindcss": "^3.0.24",
        "ts-node": "^10.7.0",
        "typescript": "4.6.4"
    },
    "prettier": {
        "endOfLine": "auto",
        "printWidth": 160,
        "semi": true,
        "tabWidth": 4
    }
}
